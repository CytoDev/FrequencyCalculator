<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="ic_about"          format="reference" />
    <attr name="ic_cytodev"        format="reference" />
    <attr name="ic_copyright"      format="reference" />
    <attr name="ic_appearance"     format="reference" />
    <attr name="ic_feedback"       format="reference" />
    <attr name="ic_report_problem" format="reference" />

    <style name="Theme.Cyto.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="ic_about">@drawable/ic_about_dark</item>
        <item name="ic_cytodev">@drawable/ic_cytodev_dark</item>
        <item name="ic_copyright">@drawable/ic_copyright_dark</item>
        <item name="ic_appearance">@drawable/ic_appearance_dark</item>
        <item name="ic_feedback">@drawable/ic_feedback_dark</item>
        <item name="ic_report_problem">@drawable/ic_report_problem_dark</item>
    </style>

    <style name="Theme.Cyto.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="ic_about">@drawable/ic_about_light</item>
        <item name="ic_cytodev">@drawable/ic_cytodev_light</item>
        <item name="ic_copyright">@drawable/ic_copyright_light</item>
        <item name="ic_appearance">@drawable/ic_appearance_light</item>
        <item name="ic_feedback">@drawable/ic_feedback_light</item>
        <item name="ic_report_problem">@drawable/ic_report_problem_light</item>
    </style>

    <style name="Theme.Cytodev" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparant_black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
